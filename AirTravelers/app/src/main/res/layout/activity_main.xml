<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:context="com.ifreeplay.airtravelers.activity.MainActivity">

    <TextView
        android:id="@+id/tv_wechatlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信登录"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#00bc12"
        />
    <TextView
        android:id="@+id/tv_linelogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="line登录"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#ff7500"
    />
    <TextView
        android:id="@+id/tv_facebooklogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="facebook登录"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#4b5cc4"
        />

    <TextView
        android:id="@+id/tv_confirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认订单"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        android:background="#e0eee8"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="80dp"

    >
    <TextView
        android:id="@+id/tv_fb_share_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fb-share-url"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#e0eee8"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_fb_share_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fb-share-pic"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#e0eee8"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:id="@+id/tv_line_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="line-share-text"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#e0eee8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_line_share_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="line-share-pic"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#e0eee8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />
    </LinearLayout>





</LinearLayout>
