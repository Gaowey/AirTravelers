<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:context="com.ifreeplay.airtravelers.activity.MainActivity">

    <TextView
        android:id="@+id/tv_wechatlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信登录"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#00bc12"
        />
    <TextView
        android:id="@+id/tv_linelogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="line登录"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#ff7500"
    />
    <TextView
        android:id="@+id/tv_facebooklogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="facebook登录"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#4b5cc4"
        />

    <TextView
        android:id="@+id/tv_confirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认订单"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="100dp"
        android:background="#e0eee8"
        />

</LinearLayout>
