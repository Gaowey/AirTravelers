<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    tools:context="com.ifreeplay.airtravelers.activity.MainActivity">
    <TextView
        android:id="@+id/tv_wechatPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#00e500"
        />
    <TextView
        android:id="@+id/tv_paypalPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="paypal"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#4c8dae"
        />
    <TextView
        android:id="@+id/tv_googlePay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GooglePay"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#ed57"
        />

</LinearLayout>
